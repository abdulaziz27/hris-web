					"name": "Get All Locations",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Has locations array\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.locations).to.be.an('array');",
									"    pm.expect(jsonData.locations.length).to.be.at.least(3);",
									"});",
									"",
									"pm.test(\"Locations have attendance_type field\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.locations[0].attendance_type).to.exist;",
